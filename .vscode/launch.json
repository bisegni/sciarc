    "version": "0.2.0",
    "configurations": [
        {
            "name": "unit_test",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/unit_test",
            "args": [],
            "cwd": "${workspaceFolder}/build/",
            "preRunCommands": ["settings set target.disable-aslr false"]
        },
        {
            "name": "Sciarc Gateway",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/main.go",
            "args": ["gateway"],
            "env": {"CC":"clang","LD_LIBRARY_PATH":"$LD_LIBRRY_PATH:./build/local/lib/linux-x86_64"}
        },
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${file}",
            "env": {"CC":"clang","LD_LIBRARY_PATH":"$LD_LIBRRY_PATH:./build/local/lib/linux-x86_64"},
            "showLog": true
          }
    ]
}